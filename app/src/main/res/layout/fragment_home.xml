<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenLightE"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/tvfree3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg4"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:paddingStart="60dp"
        android:paddingEnd="15dp"
        android:text="Free Classes"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvfree"
        app:layout_constraintTop_toBottomOf="@+id/nativ_c" />

    <TextView
        android:id="@+id/tvfree2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg4"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:paddingStart="60dp"
        android:paddingEnd="15dp"
        android:text="Free Classes"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvpaid"
        app:layout_constraintStart_toStartOf="@+id/tvpaid"
        app:layout_constraintTop_toBottomOf="@+id/nativ_c" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvfree2"
        app:layout_constraintStart_toStartOf="@+id/tvfree2"
        app:layout_constraintTop_toTopOf="@+id/tvfree2"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nativ_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImageSlider"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvpaid"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg1"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:paddingStart="60dp"
        android:paddingEnd="15dp"
        android:text="Paid Cources"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvfree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvfree2" />

    <TextView
        android:id="@+id/tvquiz"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg2"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:paddingStart="60dp"
        android:paddingEnd="15dp"
        android:text="Daily Quiz"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvdemo"
        app:layout_constraintTop_toBottomOf="@+id/tvfree" />

    <TextView
        android:id="@+id/tvdemo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg3"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:paddingStart="60dp"
        android:paddingEnd="15dp"
        android:text="Demo Classes"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvquiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvpaid" />

    <TextView
        android:id="@+id/tvfree"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg4"
        android:fontFamily="monospace"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:paddingStart="60dp"
        android:paddingEnd="15dp"
        android:text="Free Classes"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvpaid"
        app:layout_constraintTop_toBottomOf="@+id/tvfree3" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvfree3"
        app:layout_constraintStart_toStartOf="@+id/tvfree"
        app:layout_constraintTop_toTopOf="@+id/tvfree3"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvfree"
        app:layout_constraintStart_toStartOf="@+id/tvfree"
        app:layout_constraintTop_toTopOf="@+id/tvfree"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvpaid"
        app:layout_constraintStart_toStartOf="@+id/tvpaid"
        app:layout_constraintTop_toTopOf="@+id/tvpaid"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvdemo"
        app:layout_constraintStart_toStartOf="@+id/tvdemo"
        app:layout_constraintTop_toTopOf="@+id/tvdemo"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvquiz"
        app:layout_constraintStart_toStartOf="@+id/tvquiz"
        app:layout_constraintTop_toTopOf="@+id/tvquiz"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>